<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cse403.homesafe"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:maxSdkVersion="22"
        android:minSdkVersion="19"
        android:targetSdkVersion="21" >
    </uses-sdk>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactsActivity"
            android:exported="true"
            android:label="@string/title_activity_contacts"
            android:parentActivityName=".StartScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartScreenActivity" />
        </activity>
        <activity
            android:name=".FavLocationsActivity"
            android:exported="true"
            android:label="@string/title_activity_fav_locations" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartScreenActivity" />
        </activity>
        <activity
            android:name=".PasswordActivity"
            android:exported="true"
            android:label="@string/title_activity_password" >
        </activity>
        <activity
            android:name=".Settings.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".AddContactActivity"
            android:label="@string/title_activity_add_contact" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ContactsActivity" />
        </activity>
        <activity
            android:name=".AddLocationActivity"
            android:label="@string/title_activity_add_location" >
        </activity>
        <activity
            android:name=".EditLocationActivity"
            android:label=".EditLocationActivity" >
        </activity>
        <activity
            android:name=".EditContactActivity"
            android:label=".EditContactActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ContactsActivity" />
        </activity>
        <activity
            android:name=".DangerActivity"
            android:label=".DangerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HSTimerActivity" />
        </activity>
        <activity android:name=".TripSettingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartScreenActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".HSTimerActivity"
            android:label="@string/title_activity_hstimer" >
        </activity>
        <activity
            android:name=".ArrivalScreenActivity"
            android:label="@string/title_activity_arrival_screen" >
        </activity>
    </application>

</manifest>
