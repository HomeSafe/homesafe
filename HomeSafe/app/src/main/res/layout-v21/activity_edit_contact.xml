<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/edit_layout"
tools:context="cse403.homesafe.Contacts.AddContactActivity">


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cancel"
    android:id="@+id/discard"
    android:textColor="@android:color/black"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/ripple"
    android:layout_alignTop="@+id/delete"
    android:layout_alignParentLeft="true"
    android:layout_alignParentBottom="true" />

<com.rengwuxian.materialedittext.MaterialEditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/contact_name_hint"
    app:met_floatingLabel="highlight"
    android:inputType="text"
    android:id="@+id/name_text"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textSize="40dp"
    app:met_baseColor="@android:color/black"
    app:met_primaryColor="@color/accent"
    app:met_textColorHint="#BDBDBD"/>

<com.rengwuxian.materialedittext.MaterialEditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/contact_phone_hint"
    app:met_floatingLabel="highlight"
    android:inputType="phone"
    android:id="@+id/phone_text"
    android:layout_below="@+id/name_text"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textSize="30dp"
    app:met_baseColor="@android:color/black"
    app:met_primaryColor="@color/accent"
    app:met_textColorHint="#BDBDBD"/>

<com.rengwuxian.materialedittext.MaterialEditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/contact_email_hint"
    app:met_floatingLabel="highlight"
    android:inputType="textEmailAddress"
    android:id="@+id/email_text"
    android:layout_below="@+id/phone_text"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textSize="30dp"
    app:met_baseColor="@android:color/black"
    app:met_primaryColor="@color/accent"
    app:met_textColorHint="#BDBDBD"/>

<com.rengwuxian.materialedittext.MaterialEditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/contact_tier_hint"
    app:met_floatingLabel="highlight"
    android:inputType="textEmailAddress"
    android:id="@+id/tier_text"
    android:textSize="30dp"
    app:met_baseColor="@android:color/black"
    app:met_primaryColor="@color/accent"
    app:met_textColorHint="#BDBDBD"
    android:layout_below="@+id/email_text"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

</RelativeLayout>
