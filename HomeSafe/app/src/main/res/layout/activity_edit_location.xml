<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cse403.homesafe.EditLocationActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discard Changes"
        android:id="@+id/discard"
        android:textColor="@android:color/black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignTop="@+id/delete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Location"
        android:id="@+id/delete"
        android:textColor="@android:color/black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/state_text"
        android:layout_alignEnd="@+id/state_text" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contact_name_hint"
        app:met_floatingLabel="highlight"
        android:inputType="text"
        android:id="@+id/name_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        app:met_baseColor="@android:color/black"
        app:met_primaryColor="@color/accent"
        app:met_textColorHint="#BDBDBD"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/location_st_address_hint"
        app:met_floatingLabel="highlight"
        android:inputType="text"
        android:id="@+id/st_address_text"
        android:layout_below="@+id/name_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        app:met_baseColor="@android:color/black"
        app:met_primaryColor="@color/accent"
        app:met_textColorHint="#BDBDBD"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/location_city_hint"
        app:met_floatingLabel="highlight"
        android:inputType="text"
        android:id="@+id/city_text"
        android:layout_below="@+id/st_address_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        app:met_baseColor="@android:color/black"
        app:met_primaryColor="@color/accent"
        app:met_textColorHint="#BDBDBD"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/location_state_hint"
        app:met_floatingLabel="highlight"
        android:inputType="text"
        android:id="@+id/state_text"
        android:layout_below="@+id/city_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        app:met_baseColor="@android:color/black"
        app:met_primaryColor="@color/accent"
        app:met_textColorHint="#BDBDBD"/>


</RelativeLayout>
